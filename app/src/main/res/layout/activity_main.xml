<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.example.linxuan.myprogressbar2.customView.CustomProgress
        android:id="@+id/custom_progress"
        app:bigCircleColor="#3de822"
        app:circleColor="#ffffff"
        app:radius="30dp"
        app:strokeWidth="10dp"
        app:textColor="#000"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.example.linxuan.myprogressbar2.customView.CustomProgress
        android:id="@+id/custom_progress2"
        android:layout_marginTop="10dp"
        app:bigCircleColor="#2257e8"
        app:circleColor="#ffffff"
        app:radius="30dp"
        app:strokeWidth="10dp"
        app:textColor="#000"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.example.linxuan.myprogressbar2.customView.CustomProgress
        android:id="@+id/custom_progress3"
        android:layout_marginTop="10dp"
        app:bigCircleColor="#2257e8"
        app:circleColor="#cf1111"
        app:radius="30dp"
        app:ringColor="#3cd10f"
        app:strokeWidth="10dp"
        app:textColor="#fff"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</LinearLayout>